pipeline {
    agent any
    tools {nodejs "node"}
    stages {
        stage('git clone') {
            steps {
                git branch: 'main', credentialsId: 'JenkinsDeployKey', url: 'git@github.com:AHS-Backend/AHS-backend.git'
                
            }
        }
       stage('Install dependencies') {
                steps {
                  sh 'npm install'
            }
        }     
       stage('Test') {
              steps {
               sh '''
               kill -9 $(lsof -t -i:8081) || true
               export JENKINS_NODE_COOKIE=dontKillMe
               nohup npm run start&
    '''
            }
        }
    } 
  }
